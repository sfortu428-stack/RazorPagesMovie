@page
@model RazorPagesMovie.Pages.Movies.IndexModel

@{
    ViewData["Title"] = "Movies";
}

<h1>Movies</h1>

<form method="get" class="mb-3">
    <p>
        <label>Title: </label>
        <input type="text" asp-for="SearchString" />

        <label>Genre: </label>
        <select asp-for="MovieGenre" asp-items="Model.Genres">
            <option value="">All</option>
        </select>

        <label>Timeslot: </label>
        <select asp-for="SelectedTimeslot" asp-items="Model.Timeslots">
            <option value="">All Timeslots</option>
        </select>

        <input type="submit" value="Filter" class="btn btn-primary" />
    </p>
</form>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Poster</th>
            <th>Title</th>
            <th>Release Date</th>
            <th>Genre</th>
            <th>Price</th>
            <th>Rating</th>
            <th>Timeslot</th>
            <th>Director</th>
            <th>Actor</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Movie)
        {
            <tr>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                    {
                        <img src="@item.ImageUrl" width="80" height="120" />
                    }
                </td>
                <td>@item.Title</td>
                <td>@item.ReleaseDate.ToString("yyyy-MM-dd")</td>
                <td>@item.Genre</td>
                <td>@item.Price</td>
                <td>@item.Rating</td>
                <td>@item.Timeslot</td>
                <td>@item.Director?.Name</td>
                <td>@item.Actor?.FirstName @item.Actor?.LastName</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
