@page
@model RazorPagesMovie.Pages.Movies.IndexModel

@{
    ViewData["Title"] = "Index";
}

<div class="container py-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold">Movies</h1>
        <a class="btn btn-primary shadow-sm" asp-page="Create">
            <i class="bi bi-plus-circle"></i> Create New
        </a>
    </div>

    <!-- Filters -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">

            <form method="get" class="row gy-2 gx-3 align-items-end">

                <div class="col-md-3">
                    <label class="form-label fw-semibold">Genre</label>
                    <select asp-for="MovieGenre" asp-items="Model.Genres" class="form-select"></select>
                </div>

                <div class="col-md-5">
                    <label class="form-label fw-semibold">Title</label>
                    <input type="text" asp-for="SearchString" class="form-control" placeholder="Search movie…" />
                </div>

                <div class="col-md-2">
                    <button type="submit" class="btn btn-dark w-100">
                        Filter
                    </button>
                </div>

            </form>

        </div>
    </div>

    <!-- Movie List -->
    <div class="row g-4">

        @foreach (var item in Model.Movie)
        {

            <div class="card m-3" style="width: 20rem;">

                <img src="@(item.ImageUrl ?? Url.Content("~/img/no-poster.png"))"
                     alt="@item.Title"
                     class="card-img-top"
                     onerror="this.src='/img/no-poster.png';" />



                    <div class="card-body d-flex flex-column">


                        <h5 class="card-title fw-bold">@item.Title</h5>

                        <p class="text-muted mb-1">
                            <i class="bi bi-calendar-event"></i>
                            @item.ReleaseDate.ToString("yyyy/MM/dd")
                        </p>

                        <p class="mb-1">
                            <span class="badge bg-secondary">@item.Genre</span>
                        </p>

                        <p class="fw-bold">Price: <span class="text-success">@item.Price</span></p>
                        <p>Rating: <strong>@item.Rating</strong></p>



                        <div class="mt-auto pt-2">
                            <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm me-2">Edit</a>
                            <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-outline-secondary btn-sm me-2">Details</a>
                            <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">Delete</a>
                        </div>

                    </div>

                </div>
        }

    </div>
</div>